  <div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title"> Edit Categories </h3>
        <nav aria-label="breadcrumb">
        </nav>
      </div>

      <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <form action="/admin/category/categoryedit/<%= category._id %>" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="categoryName">Category Name</label>
                  <input type="text" class="form-control" id="categoryName" name="categoryName" value=" <%= category.categoryName %>" required>
                </div>
                <div class="form-group">
                  <label for="categoryImage">Current Image</label>
                  <img id="previewImage" src="<%= category.image %>" alt="Current Image" class="img-thumbnail" style="height: 284px; object-fit: cover; object-position: center; margin-bottom: 1rem;">
                  <div class="custom-file">
                      <input type="file" class="form-control" id="newCategoryImage" name="newImage" onchange="previewFile()">
                      <label class="custom-file-label" for="newCategoryImage">Choose file</label>
                  </div>
              </div>
                <button type="submit" class="btn btn-lg btn-gradient-primary mt-2">Update Category</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      


      <script>
        // Function to handle file input change and preview the image
        function previewFile() {
            const fileInput = document.getElementById('newCategoryImage');
            const previewImage = document.getElementById('previewImage');
    
            const file = fileInput.files[0];
            const reader = new FileReader();
    
            reader.onloadend = function () {
                // Set the src attribute of the image element to the uploaded image data
                previewImage.src = reader.result;
            };
    
            if (file) {
                reader.readAsDataURL(file);
            } else {
                // Reset the image preview if no file is selected
                previewImage.src = "";
            }
        }
    </script>
    
  


