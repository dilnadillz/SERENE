<div class="row">

    <div class="col-md-12 mb-3">
        <a href="/admin/offersadd" class="btn btn-lg btn-gradient-primary">Create Offer</a>
    </div>

  <div class="col-md-12 grid-margin stretch-card">
      <div class="card">
          <div class="card-body">
              <h4 class="card-title">Offers List</h4>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                      <tr>
                          <th>Name</th>
                          <th>Percentage</th>
                          <th>Starting Date</th>
                          <th>Expire Date</th>
                          <th>Active</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% offerData.forEach(offer => { %>
                          <tr>
                            
                              <td><%= offer.name %></td>
                              <td><%= offer.percentage %>%</td>
                              <td><%= offer.startingDate.toLocaleDateString() %></td>
                              <td><%= offer.expiryDate.toLocaleDateString() %></td>
                              <td><%= offer.status %></td>
                              <td>
                                  <div class="d-flex">
                                    <!-- <a href="/admin/productsedit/<%#= product._id %>" class="btn btn-sm btn-outline-primary">Edit</a> -->
                                    <form action="/admin/offers/remove/<%= offer._id %>" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                    </form>
                                  </div>
                              </td>
                          </tr>
                      <% }); %>
                  </tbody>
              </table>
              </div>
          </div>
      </div>
  </div>
</div>

    

           
                
