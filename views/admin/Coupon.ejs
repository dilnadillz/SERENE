      <!-- partial -->
     
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title"> Offer Details </h3>
            <nav aria-label="breadcrumb">
    
            </nav>
          </div>
    
         <!-- Your HTML Structure -->



        
    <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  
                  <th scope="col">Coupon Code</th>
                  <th scope="col">Description</th>
                  <th scope="col">Minimum Amount</th>
                  <th scope="col">Dicount</th>
                  <th scope="col">Starting Date</th>
                  <th scope="col">Expiry Date</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% coupon.forEach((coup) => { %>
                <tr id="couponRow-<%=coup._id %>">
               
                  <td><%= coup.couponCode %></td>
                  <td><%= coup.couponDescription %></td>
                  <td><%= coup.minimumAmount %></td>
                  <td><%= coup.discount %></td>
                  <td>
                    <%= new Date(coup.startingDate).toLocaleDateString('en-GB') %>
                  </td>
                  <td>
                    <%= new Date(coup.expiryDate).toLocaleDateString('en-GB') %>
                  </td>
  
                  <td>
                    <!-- <a href="/admin/coupon/edit-coupon?couponId=<%#=item._id%>" class="btn btn-sm btn-outline-primary">
                      Edit
                    </a> -->
                    <form id="deleteForm" action="/admin/coupon/remove/<%= coup._id %>?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete()">Delete</button>
                    </form>
                    
                  </td>
                </tr>
  
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
        
    
      <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this coupon?")) {
                document.getElementById("deleteForm").submit();
            }
        }
    </script>
    
           
      
