         <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card card-product-grid shadow-sm" style="border-radius: 10px; overflow: hidden; transition: transform 0.2s;">
                    <!-- Referral Offer Image -->
                    <img src="/assets/img/referral/istockphoto-1197835442-612x612.jpg" class="card-img-top" alt="Referral Offer Image">
                    <% if (Array.isArray(referral)) { %>
                    <% referral.forEach((referral) => { %>
                        <div class="card-body d-flex flex-column align-items-start p-3">
                            <!-- Referral Offer Details -->
                            <h5 class="card-title mb-2" style="font-size: 1.2rem; color: #333;">Special Referral Offer</h5>
                            
                            <p class="card-text mb-3" style="font-size: 1rem; color: #ecd610;">Referrer Reward: Rs. <%= referral.referrerReward %></p>
                            <p class="card-text mb-3" style="font-size: 1rem; color: #ecd610;">Referree Bonus: Rs. <%= referral.referreeBonus %></p>
                            <p class="card-text mb-3" style="font-size: 1rem; color: #555151;">Get exclusive rewards when you refer your friends! Earn discounts, free products by simply inviting your friends to join. It's our way of saying thank you for spreading the word about us</p>
                            <!-- Remove Button -->
                            <div class="d-flex">
                                <form action="/admin/referral/remove/<%= referral._id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                              </div>
                        </div>
                        <% }) %>
                        <% } else { %>
                            <p>No referral offers available.</p>
                        <% } %>
                </div>
            </div>
        </div>
        
    

           
                
