                    Sale
                  </div> -->

                  <!-- Slider -->
                  <div class="mb-4" data-flickity='{"draggable": false, "fade": true}' id="productSlider">

                    <!-- Item -->
                    <% for (let i = 0; i < product.productImage.length; i++) { %>
                      <div class="image-container">
                          <div class="image">
