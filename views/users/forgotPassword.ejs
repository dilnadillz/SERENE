<link rel="stylesheet" type="text/css" href="../style/style.css">

<div class="container">
    <div class="form-container">
        <h1>Forgot Password</h1>

        <% if(typeof message !== 'undefined' && message) { %>
            <h4><%= message %></h4>
        <% } %>

        <form action="/forgotPasswordOtp" method="post" onsubmit="return validate()">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email">
            <p class="error"></p>
            <br>
            <input type="submit" value="Submit">
        </form>

        <div class="login-button-container">
            <a href="/login" class="login-button">Back to Login</a>
        </div>
    </div>
</div>

<script>
    const inputBox = document.querySelectorAll('input');
    const error = document.querySelectorAll('.error');

    inputBox.forEach((element, index) => {
        element.addEventListener('keyup', () => {
            error[index].innerHTML = "";
        });
    });

    function validate() {
        var email = document.getElementById('email').value;
        var emailRegex = /^[^\s@]+@gmail\.com$/i;

        let err = 0;

        if (!emailRegex.test(email)) {
            error[0].innerHTML = "Invalid email. Please enter a valid Gmail address";
            err = 1;
        }

        if (!email) {
            error[0].innerHTML = "This field is required";
            err = 1;
        }

        if (err === 1) {
            return false;
        } else {
            return true;
        }
    }
</script>

